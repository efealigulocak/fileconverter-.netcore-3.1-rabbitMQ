@model wordToPdf
@{
    ViewData["Title"] = "Convert";
}

<h2>Select a file and Convert</h2>
<h1>@ViewBag.result</h1>
<div class="row">

    <div class="col-md-4">


        <form asp-action="wordToPdf" method="post" enctype="multipart/form-data">



            <div class="form-group">
                <label asp-for="myFile" class="control-label">Choose your file to convert</label>

                <input asp-for="myFile" class="form-control" />

            </div>

            <div class="form-group">
                <label asp-for="email" class="control-label">Enter your email(File will be sent to your email)</label>

                <input asp-for="email" class="form-control" />

            </div>

            <div class="form-group">

                <label asp-for="convertMethod" class="radio-inline"><input asp-for="convertMethod" value="pdf" type="radio" checked>Convert Word to PDF</label>
                <label asp-for="convertMethod" class="radio-inline"><input asp-for="convertMethod" value="docx" type="radio">Convert PDF to Word</label>
                <label asp-for="convertMethod" class="radio-inline"><input asp-for="convertMethod" value="jpeg" type="radio">Convert PDF to Image</label>
                <label asp-for="convertMethod" class="radio-inline"><input asp-for="convertMethod" value="html" type="radio">Convert PDF to HTML</label>



            </div>


            <div class="form-group">

                <input type="submit" value="Convert" class="btn btn-primary" />

            </div>



        </form>

    </div>




</div>
